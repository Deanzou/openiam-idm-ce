<assembly>
  <id>openiam-distribution-tomcat-6.0</id>
  <formats>
    <format>zip</format>
  </formats>
  <moduleSets>
    <moduleSet>
	  <useAllReactorProjects>true</useAllReactorProjects>
	  <includes>
		<include>org.openiam:openiam-selfservice</include>
		<include>org.openiam:openiam-webconsole</include>
		<include>org.openiam:openiam-idm-esb</include>
	  </includes>
      <binaries>
		<!--<outputDirectory>webapps/${artifact.name}</outputDirectory>-->
		<outputFileNameMapping>webapps/${artifact.name}.war</outputFileNameMapping>
		<includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
        	<directory>../configurations/iamconf</directory>
        	<outputDirectory>iamconf</outputDirectory>
        	<includes>
        		<include>**</include>
        	</includes>
    </fileSet>
    <fileSet>
        	<directory>../configurations/iamscripts</directory>
        	<outputDirectory>iamscripts</outputDirectory>
        	<includes>
        		<include>**</include>
        	</includes>
    </fileSet>  
	<fileSet>
        	<directory>../configurations/conf</directory>
        	<outputDirectory>conf</outputDirectory>
        	<includes>
        		<include>**</include>
        	</includes>
    </fileSet> 
    
  </fileSets>
  
</assembly>
