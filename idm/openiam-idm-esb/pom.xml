            </exclusions>
        </dependency>
		<dependency>
			<groupId>org.openiam</groupId>
			<artifactId>idm-connector-core</artifactId>
			<version>${project.version}</version>
		      <exclusions>
			        <exclusion>
				    	<groupId>org.slf4j</groupId>
				    	<artifactId>slf4j-api</artifactId>
			        </exclusion>
			        <exclusion>
				    	<groupId>org.slf4j</groupId>
				    	<artifactId>slf4j-jdk14</artifactId>
			        </exclusion>
    			</exclusions>
		</dependency>


